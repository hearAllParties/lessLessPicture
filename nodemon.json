{
  "restartable": "rs",
  "ignore": [
      ".git",
      "node_modules/**/node_modules"
  ],
  "verbose": true,
  "stdin": true,
  "colous": true,
  "execMap": {
      "": "node",
      "js": "node --harmony"
  },
  "watch": ["*.*"],
  "env": {
      "NODE_ENV": "development",
      "PORT": "3000"
  },
  "ext": "js json"
}
